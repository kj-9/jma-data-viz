{
  "version": 8,
  "name": "jma-viz",
  "sources": {
    "mesh-source": {
      "type": "vector",
      "url": "http://[::]:8080/data/pmtiles.json"
    },
    "white-map": {
      "type": "raster",
      "tiles": [
        "https://cyberjapandata.gsi.go.jp/xyz/blank/{z}/{x}/{y}.png"
      ],
      "minzoom": 0,
      "maxzoom": 14
    }
  },
  "sprite": "",
  "glyphs": "https://orangemug.github.io/font-glyphs/glyphs/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "white-map",
      "type": "raster",
      "source": "white-map",
      "layout": {
        "visibility": "visible"
      }
    },
    {
      "id": "mesh-fill",
      "type": "fill",
      "source": "mesh-source",
      "source-layer": "mesh",
      "minzoom": 3,
      "maxzoom": 24,
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "fill-color": [
          "interpolate",
          [
            "linear"
          ],
          [
            "get",
            "max_temp"
          ],
          -15,
          "#eef3fb",
          0,
          "#cbddec",
          10,
          "#98c5e0",
          20,
          "#68a8cf",
          30,
          "#f4d9b5",
          35,
          "#f0b78a",
          40,
          "#d87a62"
        ],
        "fill-opacity": 0.65
      }
    },
    {
      "id": "mesh-outline",
      "type": "line",
      "source": "mesh-source",
      "source-layer": "mesh",
      "minzoom": 3,
      "maxzoom": 24,
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "line-color": "rgba(255, 255, 255, 0.35)",
        "line-width": 0.5,
        "line-opacity": 0.9
      }
    },
    {
      "id": "mesh-symbol",
      "type": "symbol",
      "source": "mesh-source",
      "source-layer": "mesh",
      "minzoom": 7,
      "layout": {
        "text-field": [
          "get",
          "max_temp"
        ],
        "text-font": [
          "Noto Sans Regular"
        ],
        "text-size": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          9,
          12,
          13,
          60
        ],
        "text-allow-overlap": false,
        "visibility": "visible"
      },
      "paint": {
        "text-color": "rgba(90, 90, 90, 1)",
        "text-halo-color": "rgba(255,255,255,0.75)",
        "text-halo-width": 0.5,
        "text-opacity": 0.9
      }
    }
  ]
}
